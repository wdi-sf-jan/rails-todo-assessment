<h1>Todo Lists</h1>
<ul>
  <% @todolists.each do |list| %>
  <li>
    <p><%= link_to(list.name, todolist_path(list)) %></p>
    <p><%= link_to "Edit", edit_todolist_path(list) %></p>
    <p><%= button_to "Delete", todolist_path(list), method: :delete %></p>
  </li>
  <% end %>
</ul>

<%= link_to "New Todo List", new_todolist_path %>