<h1>List#show</h1>
<p>Find me in app/views/list/show.html.erb</p>

<h1><%= @list.name %></h1>

<ul>
  <% @list.movies.each do |role| %>
  <li>
    <%= link_to "#{role.title} (#{role.year})", movie_path(role) %>
    <%= button_to "X", remove_movie_path(@list, role), :method => :delete %>
  </li>
  <% end %>
</ul>
<% unless @items.empty? %>
  <%= form_tag add_item_path do |f|%>
    <%= f.text_field :name, :placeholder => "Item Name" %>
    <%= submit_tag "Add" %>
  <% end %>
<% end %>

<%= link_to "Edit", edit_list_path(@list) %>
<%= button_to "Delete", list_path(@list), :method => :delete %>
<br><br>

<%= link_to "Back to lists", lists_path %>
